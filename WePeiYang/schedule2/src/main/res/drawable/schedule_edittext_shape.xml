<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- android:radius 弧形的半径 -->
    <corners android:radius="6dip" />
    <!-- padding：Button里面的文字与Button边界的间隔 -->
    <padding
        android:left="6dp"
        android:top="6dp"
        android:right="6dp"
        android:bottom="6dp"
        />
    <!-- 边框的宽度 -->
    <stroke
        android:width="2px" />

</shape>
