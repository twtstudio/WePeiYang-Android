<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <EditText
        android:id="@+id/annoDetailBottomEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints="@null"
        android:inputType="textMultiLine"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/annoDetailBottomButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/annoDetailBottomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0FFF"
        android:src="@drawable/comments"
        app:layout_constraintBottom_toBottomOf="@id/annoDetailBottomEditText"
        app:layout_constraintTop_toTopOf="@id/annoDetailBottomEditText"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>