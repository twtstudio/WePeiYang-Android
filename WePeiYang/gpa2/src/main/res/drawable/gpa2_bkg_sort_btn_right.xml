<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/gpa2_color_primary" />
            <stroke android:width="2dp" android:color="@color/gpa2_color_secondary" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="8dp" android:topLeftRadius="0dp" android:topRightRadius="8dp" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/gpa2_color_secondary" />
            <stroke android:width="2dp" android:color="@color/gpa2_color_secondary" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="8dp" android:topLeftRadius="0dp" android:topRightRadius="8dp" />
        </shape>
    </item>
</selector>