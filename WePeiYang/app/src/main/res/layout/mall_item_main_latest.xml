<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mall_cv_main_latest"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="#ffffff"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp"
    tools:layout_width="200dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/mall_iv_main_latest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            tools:layout_height="180dp"
            tools:src="@drawable/lf2_question_mark" />

        <TextView
            android:id="@+id/mall_tv_main_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mall_iv_main_latest"
            android:layout_margin="7dp"
            android:textColor="#000000"
            android:textSize="14sp"
            tools:text="【随便什么吧】生旦净末丑 神仙老虎狗 擦桌子扫地 给师娘带孩子" />

        <TextView
            android:id="@+id/mall_tv_main_rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/mall_tv_main_price"
            android:layout_alignParentStart="true"
            android:layout_marginStart="7dp"
            android:text="@string/rmb"
            android:textColor="#f58010"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mall_tv_main_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mall_tv_main_name"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_toEndOf="@id/mall_tv_main_rmb"
            android:textColor="#f58010"
            android:textSize="20sp"
            tools:text="20.00" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/mall_tv_main_name"
            android:layout_alignBottom="@id/mall_tv_main_price"
            android:layout_marginTop="7dp"
            android:layout_toStartOf="@id/mall_tv_main_locate"
            android:src="@drawable/mall_ic_locate" />

        <TextView
            android:id="@+id/mall_tv_main_locate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/mall_tv_main_price"
            android:layout_alignParentEnd="true"
            android:layout_margin="7dp"
            android:textSize="12sp"
            tools:text="北洋园校区" />
    </RelativeLayout>


</android.support.v7.widget.CardView>